pkgname=wpa_passthru
pkgver=0.1.0
pkgrel=0
pkgdesc="WPA Supplicant pass-through for Wifibox"
url="https://github.com/pgj/freebsd-wifibox-alpine"
arch="all"
license="BSD2"
install=""
subpackages=
source="wpa_passthru.initd
	wpa_passthru
"

package() {
	install -D -m755 "$srcdir"/wpa_passthru.initd "$pkgdir"/etc/init.d/wpa_passthru
	install -D -m755 "$srcdir"/wpa_passthru "$pkgdir"/sbin/wpa_passthru
}
